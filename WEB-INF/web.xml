<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">
	<!-- "Сервлет <-> JSP" START -->
		<servlet>
			<servlet-name>Ch3 Beer</servlet-name>
			<servlet-class>com.example.web.JokeSelect</servlet-class>

			<init-param>
				<param-name>markup-designer</param-name>
				<param-value>Mark</param-value>
			</init-param>
		</servlet>

		<servlet-mapping>
			<servlet-name>Ch3 Beer</servlet-name>
			<url-pattern>/joke.do</url-pattern>
		</servlet-mapping>

		<servlet>
			<servlet-name>url_1</servlet-name>
			<servlet-class>com.example.web.servlet_1</servlet-class>

			<!--<init-param>-->
				<!--<param-name>testEmail</param-name>-->
				<!--<param-value>ikickedbutt@wickedlysmart.com</param-value>-->
			<!--</init-param>-->
			<init-param>
				<param-name>markup-designer</param-name>
				<param-value>Mark</param-value>
			</init-param>
		</servlet>

		<servlet-mapping>
			<servlet-name>url_1</servlet-name>
			<url-pattern>/url_1</url-pattern>
		</servlet-mapping>
	<!-- "Сервлет <-> JSP" END -->

	<!-- Context param START -->
		<context-param>
			<param-name>slogan</param-name>
			<param-value>Тяжело в учении, легко в бою</param-value>
		</context-param>

		<!-- Developer Information  START -->
			<context-param>
				<param-name>developer_name</param-name>
				<param-value>Andrey</param-value>
			</context-param>

			<context-param>
				<param-name>developer_email</param-name>
				<param-value>kvark198@gmail.com</param-value>
			</context-param>
		<!-- Developer Information  END -->
	<!-- Context param END -->

	<!-- Описываем слушателей Information  START -->
		<listener>
			<listener-class>com.example.FirstServletContextListener</listener-class>
		</listener>
	<!-- Описываем слушателей Information  END -->
</web-app>